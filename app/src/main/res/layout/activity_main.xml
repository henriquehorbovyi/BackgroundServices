<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

    <Button
            android:id="@+id/startServiceBtn"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:background="@drawable/button_gradient_style"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wifiStatusTextView"
            app:layout_constraintBottom_toTopOf="@+id/stopServiceBtn" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/stopServiceBtn"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Stop Service"
            android:background="@drawable/button_gradient_style"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/startServiceBtn"
            android:layout_marginTop="16dp" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Wifi Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wifiStatusTextView"
            android:textSize="30sp"
            android:fontFamily="sans-serif-thin"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/startServiceBtn"
            app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="32dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>